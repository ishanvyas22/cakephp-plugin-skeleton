{
    "name": "ishanvyas22/cakephp-plugin-skeleton",
    "description": "A skeleton repository to quickly start a new CakePHP plugin",
    "type": "project",
    "keywords": [
        "php",
        "cakephp",
        "cakephp-plugin",
        "skeleton",
        "package"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Ishan Vyas",
            "homepage": "https://github.com/ishanvyas22",
            "role": "Maintainer"
        }
    ],
    "support": {
        "issues": "https://github.com/ishanvyas22/cakephp-plugin-skeleton/issues",
        "source": "https://github.com/ishanvyas22/cakephp-plugin-skeleton"
    },
    "require": {
        "php": ">=7.2",
        "cakephp/cakephp": "~4.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "cakephp/cakephp-codesniffer": "^4.2",
        "phpstan/phpstan": "^0.12.32"
    },
    "autoload": {
        "psr-4": {
            "PluginSkeleton\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PluginSkeleton\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    },
    "scripts": {
        "post-root-package-install": "PluginSkeleton\\Console\\Installer::preInstall",
        "post-create-package-cmd": "PluginSkeleton\\Console\\Installer::postInstall",
        "post-install-cmd": "composer update",
        "check": [
            "@cs-fix",
            "@cs-check"
        ],
        "cs-check": "phpcs --colors -p --extensions=php ./src ./tests",
        "cs-fix": "phpcbf --colors -p --extensions=php ./src ./tests",
        "analyze": "phpstan analyse --ansi --memory-limit=0",
        "test": "phpunit --colors=always"
    }
}
